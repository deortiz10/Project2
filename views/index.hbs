<section class="insert">
    <h3>Insert Equipo</h3>
    <a href="/get-data">LOAD POKEMON</a>
    <form action="/insert" method="post">
        <div class="input">
            <label for="name">Nombre</label>
            <select id="name">
                {{#each pokemons}}
                    <option value="{{Nombre}}" id="{{Nommbre}}">{{this.Nombre}}</option>
                {{/each}}
            </select>
            <input type="button" id = "btnGet" value="Select" />
            <input type="text" id="nombre" name="nombre" readonly/>

            <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script type="text/javascript">
                $(function () {
                    $("#btnGet").click(function () {
                        var selectedText = $("#name").find("option:selected").text();
                        document.getElementById("nombre").value = selectedText;
                    });
                });
            </script>
        </div>
        <div class="input">
            <label for="Level">Level</label>
            <input type="text" id="level" name="level">
        </div>
        <div class="input">
            <label for="nature">Nature</label>
            <input type="text" id="nature" name="nature">
        </div>
        <!--
        <div class="input">
